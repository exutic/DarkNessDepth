<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainMenu.MainActivity">


    <com.google.android.material.button.MaterialButton
        android:id="@+id/main_btn_new_game"
        android:layout_width="150dp"
        android:layout_height="50dp"
        android:backgroundTint="#A86868"
        android:gravity="center"
        android:onClick="onClickS"
        android:text="New Game"
        android:textSize="16sp"
        android:textStyle="italic|bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.095"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.659"
        app:strokeColor="#696262"
        app:strokeWidth="3dp" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/main_btn_load_game"
        android:layout_width="0dp"
        android:layout_height="50dp"
        android:backgroundTint="#A86868"
        android:gravity="center"
        android:onClick="onClickS"
        android:text="Load Game"
        android:textSize="16sp"
        android:textStyle="italic|bold"
        app:layout_constraintEnd_toEndOf="@+id/main_btn_new_game"
        app:layout_constraintStart_toStartOf="@+id/main_btn_new_game"
        app:layout_constraintTop_toBottomOf="@+id/main_btn_new_game"
        app:strokeColor="#696262"
        app:strokeWidth="3dp" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/main_btn_settings"
        android:layout_width="150dp"
        android:layout_height="50dp"
        android:backgroundTint="#A86868"
        android:gravity="center"
        android:onClick="onClickS"
        android:text="Settings"
        android:textSize="16sp"
        android:textStyle="italic|bold"
        app:layout_constraintEnd_toEndOf="@+id/main_btn_load_game"
        app:layout_constraintStart_toStartOf="@+id/main_btn_load_game"
        app:layout_constraintTop_toBottomOf="@+id/main_btn_load_game"
        app:strokeColor="#696262"
        app:strokeWidth="3dp" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/main_btn_about"
        android:layout_width="150dp"
        android:layout_height="50dp"
        android:backgroundTint="#A86868"
        android:gravity="center"
        android:onClick="onClickS"
        android:text="About"
        android:textSize="16sp"
        android:textStyle="italic|bold"
        app:layout_constraintEnd_toEndOf="@+id/main_btn_settings"
        app:layout_constraintStart_toStartOf="@+id/main_btn_settings"
        app:layout_constraintTop_toBottomOf="@+id/main_btn_settings"
        app:strokeColor="#696262"
        app:strokeWidth="3dp" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/main_btn_exit_game"
        android:layout_width="150dp"
        android:layout_height="50dp"
        android:backgroundTint="#A86868"
        android:gravity="center"
        android:onClick="onClickS"
        android:text="Exit"
        android:textSize="16sp"
        android:textStyle="italic|bold"
        app:layout_constraintEnd_toEndOf="@+id/main_btn_about"
        app:layout_constraintStart_toStartOf="@+id/main_btn_about"
        app:layout_constraintTop_toBottomOf="@+id/main_btn_about"
        app:strokeColor="#696262"
        app:strokeWidth="3dp" />


    <pl.droidsonroids.gif.GifImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="fitXY"
        android:src="@drawable/cave1"
        tools:layout_editor_absoluteX="0dp"
        tools:layout_editor_absoluteY="0dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_margin="25dp"
        android:background="#00FFFFFF"
        android:gravity="center"
        android:orientation="horizontal"
        android:padding="5dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.079">

        <TextView
            android:id="@+id/main_game_title_d1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="D"
            android:textColor="@android:color/holo_red_dark"
            android:textSize="35sp"
            android:textStyle="bold|italic"
            android:visibility="gone" />

        <TextView
            android:id="@+id/main_game_title_a"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="a"
            android:textColor="#fff"
            android:textSize="24sp"
            android:textStyle="bold|italic" />

        <TextView
            android:id="@+id/main_game_title_r"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="r"
            android:textColor="#fff"
            android:textSize="24sp"
            android:textStyle="bold|italic" />

        <TextView
            android:id="@+id/main_game_title_k"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="k"
            android:textColor="#fff"
            android:textSize="24sp"
            android:textStyle="bold|italic" />

        <TextView
            android:id="@+id/main_game_title_n"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="n"
            android:textColor="#fff"
            android:textSize="24sp"
            android:textStyle="bold|italic" />

        <TextView
            android:id="@+id/main_game_title_e1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="e"
            android:textColor="#fff"
            android:textSize="24sp"
            android:textStyle="bold|italic" />

        <TextView
            android:id="@+id/main_game_title_s1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="s"
            android:textColor="#fff"
            android:textSize="24sp"
            android:textStyle="bold|italic" />

        <TextView
            android:id="@+id/main_game_title_s2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="s "
            android:textColor="#fff"
            android:textSize="24sp"
            android:textStyle="bold|italic" />

        <TextView
            android:id="@+id/main_game_title_d2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="D"
            android:textColor="@android:color/holo_red_dark"
            android:textSize="35sp"
            android:textStyle="bold|italic"
            android:visibility="gone" />

        <TextView
            android:id="@+id/main_game_title_e2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="e"
            android:textColor="#fff"
            android:textSize="24sp"
            android:textStyle="bold|italic" />

        <TextView
            android:id="@+id/main_game_title_p"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="p"
            android:textColor="#fff"
            android:textSize="24sp"
            android:textStyle="bold|italic" />

        <TextView
            android:id="@+id/main_game_title_t"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="t"
            android:textColor="#fff"
            android:textSize="24sp"
            android:textStyle="bold|italic" />

        <TextView
            android:id="@+id/main_game_title_h"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="h"
            android:textColor="#fff"
            android:textSize="24sp"
            android:textStyle="bold|italic" />

        <TextView
            android:id="@+id/main_game_title_1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=" 1"
            android:textColor="@android:color/holo_red_dark"
            android:textSize="35sp"
            android:textStyle="bold|italic"
            android:visibility="gone" />

    </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>